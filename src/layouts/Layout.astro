---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'cooper mayne - web developer',
  description = 'profile of a human being who makes websites sometimes'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="google" content="notranslate" />
    <meta name="google-site-verification" content="SWOt4mMxz7rNbswF-GbW-Vu59be2OXGdsAoniNyCGo8" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="icon" href="/favicon.ico" />
  </head>
  <body>
    <div class="cover"></div>
    <slot />
  </body>
</html>

<style is:global>
  body {
    width: 90%;
    margin: 20px auto 0 auto;
    margin-top: 5% !important;
  }

  #me {
    position: fixed;
    bottom: 20px;
    left: 20px;
    height: 10%;
    z-index: 2;
  }

  span {
    position: relative;
  }

  .ab {
    position: absolute;
  }

  .cover {
    pointer-events: none;
    background: white;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }
</style>
